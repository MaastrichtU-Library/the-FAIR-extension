{
  "name": "the FAIR extension",
  "version": "1.0.0",
  "description": "An open-source, user-friendly web browser extension that allows researchers to do FAIRness evaluations directly to the web source.",
  
  "web_accessible_resources": [{ 
 "resources": ["index.html"],
 "matches": ["<all_urls>"]
}],
  "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"],
        "run_at": "document_end"
      }
    ]
,
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },
  "host_permissions": ["<all_urls>"],
  "action":{
      "default_popup": "index.html"
      ,"deafault_icon": {
        "16": "/icons/icon16.png",
        "48": "/icons/icon48.png",
        "128": "/icons/icon128.png"
      }
  },
  "background": {
      "service_worker": "background.js"
    },
    "permissions" :  ["storage"],
  
  "manifest_version": 3
  


}

